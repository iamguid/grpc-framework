{
    "presets": [
        ["@babel/preset-env", { "targets": { "node": "current" } }],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "babel-plugin-tsxt",
            {
                "indentType": "space",
                "indentSize": 4,
                "codeblockStart": "{",
                "codeblockEnd": "}"
            }
        ]
    ]
}
