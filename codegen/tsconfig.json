{
    "compilerOptions": {
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "lib",
        "target": "es5",
        "removeComments": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "stripInternal": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "noEmitOnError": true,
        "downlevelIteration": true,
        "rootDir": "src",
        "types": [
            "chai",
            "mocha",
            "node",
            "google-protobuf"
        ],
        "lib": [
            "es2015",
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
